---
const imageModules = import.meta.glob("/public/characters/*.png", {
    eager: true,
});
const images = Object.keys(imageModules).map((path) =>
    path.replace("/public", ""),
);
---

<div class="fixed bottom-0 right-0 z-10">
    <img
        id="character-img"
        alt=""
        class="h-48 md:h-64 lg:h-80 object-contain opacity-80"
    />
</div>

<script define:vars={{ images }}>
    const randomImage = images[Math.floor(Math.random() * images.length)];
    document.getElementById("character-img").src = randomImage;
</script>
